<%= form_for @debt, :html => { :class => 'form-horizontal' }, :validate => true do |f| %>
  
  <% @debt.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
  <% end %>


  <div class="control-group">
    <%= f.label :"多Cuanto debes?", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :monto, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :"多fecha de prestamo?", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fechaPrestamo, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :"多fecha de devolucion?", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fechaDevolucion, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :"多A quien le debes?", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :prestador, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :"Detalle del prestamo", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :descripcion, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit @boton, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancelar")),
                debts_path, :class => 'btn' %>
  </div>
<% end %>
