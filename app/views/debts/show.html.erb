<%- model_class = Debt -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:monto) %>:</strong></dt>
  <dd><%= @debt.monto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fechaPrestamo) %>:</strong></dt>
  <dd><%= @debt.fechaPrestamo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fechaDevolucion) %>:</strong></dt>
  <dd><%= @debt.fechaDevolucion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:prestador) %>:</strong></dt>
  <dd><%= @debt.prestador %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @debt.active %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @debt.descripcion %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              debts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_debt_path(@debt), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              debt_path(@debt),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
